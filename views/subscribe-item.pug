html
  head
    title= "Dude - Subscribe"
  body
    h1= subscribe.name
    main
      .container
        form(action='/dude/subscribe?_method="GET"')
          div.form-group
            input(type='text', name='name', value=subscribe.name)
          div.form-group
            input(type='email', name='email', value=subscribe.email)
          div.form-group
            input(type='submit', value='Cancel')
            input(type='submit', value='Save', formaction='/dude/subscribe/' + subscribe._id + '?_method=PUT', formmethod='POST')
            input(type='submit', value='Delete', formaction='/dude/subscribe/' + subscribe._id + '?_method=DELETE', formmethod='POST')
