html
  head
    title= "Dude - Reply"
  body
    h1= "Reply"
    main
      .container
        form(action='/dude/contact/send', method='POST')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', name='email', value=email)
          div.form-group
            label(for='subject') Subject:
            input#subject.form-control(type='text', name='subject', value=subject)
          div.form-group
            label(for='message') Message:
            textarea#message.form-control(name='message', value=message, rows='6', cols='66')= message
          div.form-group
            button.btn.btn-primary(type='submit') Reply
